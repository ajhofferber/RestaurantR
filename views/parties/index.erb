<h3> Floor Status </h3>

<a href="/parties/new"> Open New Ticket </a>


  <% @parties.each do |party| %>

    <h5>  Table <%=party.table_number%>, Party of <%=party.num_in_party%>. Ticket Stauts: <%= party.status %></h5>

  <% end %>



<div class = "party-index-map">
  <%(1..15).to_a.each do |num| %>
    <%occupied = false %>
    <% @parties.each do |party|%>
     <% if party.table_number == num %>
  <div class ="two columns">
        <form action="/parties/<%= party.id %>" method="get">
          <button id="<%=party.status%>" class ="table <%= num %>" type="submit" name="party_id" value="<%=party.id%>"> <%= num %> </button>
       </form>
  </div>
    <% occupied = true %>
      <% end %>

     <% end %>
     <% if occupied == false %>
  <div class ="two columns">
       <form action="/parties/new" method="post">
         <button id ="empty" class ="table <%= num %>" type="submit" name="table_number" value="<%=num%>"> <%= num %> </button>
      </form>
  </div>
      <%end%>
      <%end%>
</div>
